<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="portal_books" name="Book">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <div t-if="not books" class="alert alert-warning" role="alert">
                There are currently no active books in the library.
            </div>
            <t t-if="books">
                <table class="table">
                <thead>
                    <tr class="active">
                        <th>
                            <span class='d-none d-md-inline'>Book Name</span>
                        </th>
                        <th>Date Published</th>
                        <th>Publisher</th>
                    </tr>
                </thead>
                <tbody>
                <t t-foreach="books" t-as="book">
                    <tr>
                        <td><t t-out="book.title"/></td>
                        <td>
                            <span t-field="book.date_published" t-options="{'widget': 'date'}"/>&amp;nbsp;
                        </td>
                        <td><span t-field="book.publisher_id"/></td>
                    </tr>
                </t>
                </tbody>
                </table>
            </t>
        </t>
    </template>
    
</odoo>
