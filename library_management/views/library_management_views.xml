<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="library_management_view_search" model="ir.ui.view">
            <field name="name">library.management.view.search</field>
            <field name="model">library.management</field>
            <field name="arch" type="xml">
                <search string="Book Search">
                    <filter name="is_active" string="Active" domain="[('active', '=', True)]" />
                    <filter name="is_inactive" string="Archived" domain="[('active', '=', False)]" />
                </search>
            </field>
        </record>
        
        <record id="library_management_view_tree" model="ir.ui.view">
            <field name="name">library.management.view.tree</field>
            <field name="model">library.management</field>
            <field name="arch" type="xml">
                <list string="Library Books">
                    <field name="title" />
                    <field name="authors_ids" widget="many2many_tags"/>
                    <field name="publisher_id" />
                    <field name="date_published" widget="date" string="Date Published"/>
                </list>
            </field>
        </record>

        <record id="library_management_view_form" model="ir.ui.view">
            <field name="name">library.management.view.form</field>
            <field name="model">library.management</field>
            <field name="arch" type="xml">
                <form string="Book">
                    <header>
                        <button name="validate_isbn" type="object" class="oe_highlight" string="Check ISBN"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="title" 
                                required="1"
                                />
                                <field name="authors_ids" widget="many2many_tags"/>
                                <field name="publisher_id" />
                                <field name="date_published" />
                            </group>
                            <group>
                                <field name="isbn" />
                                <field name="active" />
                                <field name="cover_image" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="library_management_action" model="ir.actions.act_window">
            <field name="name">Library Books</field>
            <field name="res_model">library.management</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_is_active': 1}</field>
        </record>

        <menuitem
            id="root_library_management_menu"
            name="Library"
            sequence="10"
            web_icon="library_management,static/description/icon.png"
            />

        <menuitem
            id="library_dashboard_menu"
            name="Books"
            parent="root_library_management_menu"
            action="library_management_action"
            sequence="10"/>
    
    </data>

</odoo>
